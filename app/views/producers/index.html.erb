<h1>Listing producers</h1>

<table>
  <thead>
    <tr>
      <th><%= sortable_column "Username" %></th>
      <th><%= sortable_column "Email" %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @producers.each do |producer| %>
      <tr>
        <td><%= producer.username %></td>
        <td><%= producer.email %></td>
        <td><%= link_to 'Show', producer %></td>
        <td><%= link_to 'Edit', edit_producer_path(producer) %></td>
        <td><%= link_to 'Destroy', producer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div>
    <%= link_to "New Producer", new_producer_path(@producer), {:class => "btn btn-default btn-lg"}  %> | 
    <%= link_to "Back to Stories", stories_path(@story), {:class => "btn btn-default btn-lg", :target => "_parent"}  %>
</div>