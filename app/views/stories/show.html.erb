<div class="container">
  <div class="row">
    <div class="span6">
      <div class="well">
        
      <h2>
        <%= @story.nickname %>
      </h2>

      <p>
        <strong>Status:</strong>
        <%= @story.status %>
      </p>

      <p>
        <strong>Date:</strong>
        <%= @story.start_time.strftime("%A, %B %d") %>
      </p>

      <p>
        <strong>Time:</strong>
        <%= @story.start_time.strftime("%I:%M %p")  %>
      </p>

      <p>
        <strong>Writer:</strong>
        <%= @story.writer.username %>
      </p>

      <p>
        <strong>Editor:</strong>
        <%= @story.editor.username %>
      </p>

      <p>
        <strong>Producer:</strong>
        <%= @story.producer.username %>
      </p>

      <p>
        <strong>Theme:</strong>
        <%= @story.theme.theme %>
      </p>

      <p>
        <strong>Format:</strong>
        <%= @story.format.format %>
      </p>

      <p>
        <strong>Notes:</strong>
        <%= @story.notes %>
      </p>

        <div>
            <%= link_to "Edit", edit_story_path(@story), {:class => "btn btn-default btn-lg"}  %> | 
            <%= link_to "Close", stories_path(@story), {:class => "btn btn-default btn-lg", :target => "_parent"}  %>
        </div>
      </div>
    </div>
  </div>
</div>


